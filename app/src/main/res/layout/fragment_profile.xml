<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:title="Profile"
            app:titleTextColor="@color/white"
            android:background="@color/purple_500"
            />


    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            civ_border_width="2dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:paddingTop="10dp"
            android:src="@color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_r"
        android:text="Posts" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_r"
        android:text="Followers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="72dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_r"
        android:text="Following" />

    <TextView
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="92dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_r"
        android:text="4" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="92dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_r"
        android:text="46" />

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="92dp"
        android:textColor="@color/black"
        android:fontFamily="@font/comfortaa_r"
        android:text="65" />

    <TextView
        android:id="@+id/Profilename"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="142dp"
        android:fontFamily="@font/comfortaa_b"
        android:text="Kaushik Ghosh"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/editprofilebutton"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="120dp"
        android:backgroundTint="#6FFFFFFF"
        android:fontFamily="@font/comfortaa_r"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_grid"
        android:layout_marginTop="170dp" />

    <ImageButton
        android:layout_width="190dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_baseline_perm_contact_calendar_24"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="170dp" />

</RelativeLayout>